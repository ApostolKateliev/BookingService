@model AddProductViewModel
@{
    ViewData["Title"] = "Add New Product";
}
<div class="row">
    <div class="col-4">
        <form id="add" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control"  aria-required="true" />
                        <label asp-for="Name" class="form-label"></label>
                        <span class="fas fa-file-signature"></span>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Description" class="form-control"  aria-required="true" />
                        <label asp-for="Description" class="form-label"></label>
                        <span class="fas fa-file-signature"></span>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                   
                    <div class="row">
                        
                        <div class="col-4">

                            <button asp-controller="Product" asp-action="AddProduct" id="login-submit" type="submit" class="btn btn-primary btn-block">Add Product</button>
                        </div>
                        
                    </div>
                </form>
    </div>
</div>
@section Scripts{

<partial name="_ValidationScriptsPartial" />
}

