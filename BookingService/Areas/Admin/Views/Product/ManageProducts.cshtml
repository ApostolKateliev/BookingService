@model IEnumerable<ProductListViewModel>
@{
    ViewData["Title"] = "Manage Products";
}
<!DOCTYPE html>
<html lang="en">

<body class="hold-transition sidebar-mini">
    <div class="wrapper">


        <!--Table Start-->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Products</h3>

                        <div class="card-tools">
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>

                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model)
                                {
                                    <tr>

                                        <td>@detail.Name</td>
                                        <td>@detail.Description</td>
                                        <td>
                                            <a asp-area="admin" asp-action="edit" asp-controller="Product" asp-route-id="@detail.Id" class="btn btn-block bg-gradient-info btn-xs">Edit Product</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!--Table ENd-->
        
        <div class="card-footer">
            <a asp-area="admin" asp-controller="Product" asp-action="AddProduct" type="submit" class="btn btn-primary">Add New Product</a>
        </div>
       </div>

</body>
</html>