@model AddReviewViewModel
@{
    ViewData["Title"] = "Leave Us a Review";
}
<div class="container-fluid bg-secondary booking my-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="text-white mb-4">Your feedback gives us the chance to improve</h1>
                        <p class="text-white mb-0">Leave a review about your experience with us. </p>
                        <p class="text-white mb-0">Customer feedback is one of our primary drivers of long-term growth.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">What did you think?</h1>
                        <form id="addreview" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-white"></div>
                            <div class="row g-3">
                                <div class="col-12">
                                    <input asp-for="Name" type="text" class="form-control border-0" placeholder="Your Name" style="height: 55px;">
                                    <span asp-validation-for="Name" class="text-white"></span>
                                </div>
                                
                                <div class="col-12">
                                    <textarea asp-for="Body" class="form-control border-0" placeholder="Your Feedback"></textarea>
                                    <span asp-validation-for="Body" class="text-white"></span>
                                </div>
                                <div class="col-12">
                                    <button asp-controller="Review" asp-action="AddReview" class="btn btn-secondary w-100 py-3" type="submit">Leave us a review</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>