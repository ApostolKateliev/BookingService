@model AddBookingViewModel
@{
    ViewData["Title"] = "Booking";
    List<ServiceListViewModel> items = ViewBag.ServiceItems;
}
 <!-- Booking Start -->
    <div class="container-fluid bg-secondary booking my-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="text-white mb-4">Certified and Award Winning Car Service Provider</h1>
                        <p class="text-white mb-0">Give your vehicle a fresh new look with our car wraps. Choose from 3M™ Wrap Film Series 1080 or 3M™ Print Wrap Films. Choose from over 100 existing colors or create a customizable wrap with a variety of textures and finishes.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Book For A Service</h1>
                        <form id="addbooking" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-white"></div>
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <input asp-for="NameOfUser" type="text" class="form-control border-0" placeholder="Contact Name" style="height: 55px;">
                                    <span asp-validation-for="NameOfUser" class="text-white"></span>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input asp-for="PhoneForContact" type="text" class="form-control border-0" placeholder="Contact Phone Number" style="height: 55px;">
                                    <span asp-validation-for="PhoneForContact" class="text-white"></span>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <select class="form-select border-0" asp-for="ServiceId" style="height: 55px;">
                                        <option selected>Select A Service</option>
                                        @foreach (var item in items)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                       
                                </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        <input asp-for="Date" type="text"
                                            class="form-control border-0 datetimepicker-input"
                                            placeholder="Service Date" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <textarea asp-for="SpecialRequest" class="form-control border-0" placeholder="Special Request"></textarea>
                                    <span asp-validation-for="SpecialRequest" class="text-white"></span>
                                </div>
                                <div class="col-12">
                                    <button asp-controller="Booking" asp-action="AddBooking" class="btn btn-secondary w-100 py-3" type="submit">Book Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking End -->
